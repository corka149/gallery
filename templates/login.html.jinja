{% extends "layout/default.html.jinja" %} {% block content %}
<div>
  <h1 class="text-center text-xl md:text-4xl my-4 font-bold">
    {{ _("Login") }}
  </h1>
  <form action="/login" method="post" class="flex flex-col gap-4">
    <div>
      <label class="font-bold text-gray-500" for="username">
        {{ _("Username") }}
      </label>
      <input
        type="text"
        id="username"
        name="username"
        class="w-full border border-gray-300 rounded-md"
        required
      />
    </div>
    <div>
      <label class="font-bold text-gray-500" for="password">
        {{ _("Password") }}
      </label>
      <input
        type="password"
        id="password"
        name="password"
        class="w-full border border-gray-300 rounded-md"
        required
      />
    </div>
    <div>
      <button
        class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-light text-white bg-amber-300 hover:bg-amber-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500"
        type="submit"
      >
        {{ _("Login") }}
      </button>
    </div>
  </form>
</div>
{% endblock %}
